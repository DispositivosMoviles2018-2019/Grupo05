<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.RegistroVehiculosActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="           Formulario de Registro"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="#FFFF"
        android:background="#00574B"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etxPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese placa vehículo"
                android:singleLine="true"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/etxMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Ingrese marca vehículo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año de Fabricación"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Seleccione Fecha"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/etxCosto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:hint="Costo Vehívulo"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matriculado"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textSize="20dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rbSi"
                    android:text="Si"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rbNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_colores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.55">

                <RadioButton
                    android:id="@+id/rd_blanco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blanco" />

                <RadioButton
                    android:id="@+id/rd_negro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Negro" />

                <RadioButton
                    android:id="@+id/rd_otro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Otro" />

            </RadioGroup>

            <Button
                android:id="@+id/btnGuardarVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#00574B"
                android:textColor="#FFFF"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>